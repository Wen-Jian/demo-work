<div class="container">
    <div class='session-box'>
        <% if @errors.present? %>
            <% @errors.each do |e|%>
                <p style="color: red"><%= e %></p>
            <% end %>
        <%end%>
        <%= form_for :edit_user, url: user_path, method: :put do |f| %>
            <div class="form-group">
                <%= f.label '姓名'%>
                <%= f.text_field :name, class: "form-control", value: @user.name%>
            </div> 
            <div class="form-group">
                <%= f.label '使用者帳號'%>
                <%= f.text_field :account, class: "form-control", value: @user.account%>
            </div>  
            <div class="form-group">
                <%= f.label '舊密碼'%>
                <%= f.text_field :old_password, class: "form-control"%>
            </div>  
            <div class="form-group">
                <%= f.label '新密碼'%>
                <%= f.text_field :new_password, class: "form-control"%>
            </div>
            <%= link_to '取消', user_path(@user.id), class: 'btn btn-success'%>
            <%= f.submit '更新', class: 'btn btn-primary edit-btn'%>       
        <% end %>
    </div>
</div>
