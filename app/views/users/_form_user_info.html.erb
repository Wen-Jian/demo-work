<div class="form-group">
    <%= f.label '姓名'%>
    <%= f.text_field :name, class: "form-control"%>
</div> 
<div class="form-group">
    <%= f.label '使用者帳號'%>
    <%= f.text_field :account, class: "form-control"%>
</div>    
<div class="form-group">
    <%= f.label '密碼'%>
    <%= f.password_field :password, class: "form-control", placeholder: '密碼包含大小寫英文字母及數字'%>
</div>  