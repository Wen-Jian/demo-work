<div class="container">
    <%= form_for @product, url: products_path, method: :post do |f|%>
        <div class="form-group">
            <%= f.label 'item_name'%>
            <%= f.text_field :item_name, class: "form-control"%>
        </div>
        <div class="form-group">
            <%= f.label 'item_price'%>
        <%= f.text_field :item_price, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label 'discount'%>
            <%= f.text_field :discount, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label 'image'%>
            <%= f.file_field :image, class: "form-control"%>
        </div>
        <%= link_to '取消', root_path, class: 'btn btn-primary'%>
        <%= f.submit '創建', class: 'btn btn-danger'%>
    <% end %>
</div>